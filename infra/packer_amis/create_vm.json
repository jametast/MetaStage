{   "variables": {
        "git_repo": "https://github.com/jametast/MetaStage.git",
        "ami_name": "ami-04505e74c0741db8d",
        "ssh_user": "ubuntu"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "us-east-1",
            "ami_name": "meta_vm",
            "source_ami": "{{user `ami_name`}}",
            "instance_type": "t2.micro",
            "ssh_username": "{{user `ssh_user`}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sleep 30",
                "sudo apt update -y",
                "sudo apt upgrade -y",
                "sudo apt install nginx -y",
                "sudo apt install git -y",
                "curl -sL https://deb.nodesource.com/setup_16.x | sudo -E bash -",
                "sudo apt-get install -y nodejs",
                "sudo npm install -g npm@8.5.3",
                "sudo npm -g install create-react-app",
                "sudo npm i -g typescript",
                "sudo npm i -g hardhat",
                "sudo npm root -g",
                "sudo npm i -g ethers",
                "sudo npm i -g node-metamask",
                "sudo npm install aws-sdk",
                "mkdir .aws",
                "touch ~/.aws/credentials", 
                "echo '[default]' >> ~/.aws/credentials",
                "echo aws_access_key_id=<insert-access-key-id-here>",
                "echo aws_secret_access_key=<insert-secret-access-key-here>",
                "mkdir dev",
                "cd dev",
                "git clone {{user `git_repo`}}"
            ]
        }
    ]
}